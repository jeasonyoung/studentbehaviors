<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="basePackage" extends="struts-default">
		<!--首页框架 -->
		<action name="index!*" class="IndexAction">
			<result name="success">/WEB-INF/page/index.jsp</result>
			<result name="top">/WEB-INF/page/index_top.jsp</result>
			<result name="leftmenu">/WEB-INF/page/index_leftmenu.jsp</result>
			<result name="workspace">/WEB-INF/page/index_workspace.jsp</result>
			<result name="footer">/WEB-INF/page/index_footer.jsp</result>
		</action>
		<!--菜单数据 -->
		<action name="menu" method="tree" class="MenuAction"/>
		<!--druid -->
		<action name="druid" class="DruidAction">
			<result name="success">/druid/index.html</result>
		</action>
		
	</package>
</struts>