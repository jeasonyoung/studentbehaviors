<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!--首页 -->
	<bean name="IndexAction" class="ipower.studentbehaviors.action.IndexAction">
		<property name="menuService" ref="MenuService"/>
		<property name="systemId" value="${current_systemId}"/>
	</bean>
	<!--菜单-->
	<bean name="MenuAction" class="ipower.studentbehaviors.action.MenuAction">
		<property name="menuService" ref="MenuService"/>
		<property name="systemId" value="${current_systemId}"/>
	</bean>
	<!--druid -->
	<bean name="DruidAction" class="ipower.studentbehaviors.action.DataSourceAction"/>
</beans>